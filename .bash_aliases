# shell
alias erc="code ~/.bashrc"
alias src="source ~/.bashrc"

# git
alias g="git"
alias ga="git add"
alias gac="git add . && git commit -m"
alias gb="git branch"
alias gc="git commit -m"
alias gch="git checkout"
alias gd="git diff"
alias gf="git fetch"
alias gi="git init"
alias gl="git log"
alias gm="git merge"
alias gp="git push"
alias gpl="git pull"
alias gplo="git pull origin"
alias gpo="git push origin"
alias gr="git reset"
alias grb="git rebase"
alias gs="git status"
alias remove-cached='git rm -r --cached . && git add . && git commit -am "Removes ignored files"'

# npm
alias n="npm"
alias ni="npm install --save"
alias nid="npm install --save-dev"
alias nr="npm run"
alias nt="npm test"

# yarn
alias y="yarn"
alias ya="yarn add"
alias yad="yarn add -D"
alias yt="yarn test"
